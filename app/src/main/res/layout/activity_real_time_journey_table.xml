<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/real_time_table_round">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:id="@+id/imageIV"
            android:src="@drawable/real_time_trip"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardView"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/datetime_tv"
                    android:text="Date"
                    android:textColor="@color/icon_color"
                    android:textFontWeight="1000"
                    android:textSize="30dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="40dp"
                        android:gravity="center"
                        android:text="From:" />
                    <TextView
                        android:layout_width="255dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/oAddress_tv"
                        android:text="address"
                        android:textColor="@color/black"
                        android:textFontWeight="1000"
                        android:textSize="12dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="20dp"
                        android:text="To:"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/eAddress_tv"
                        android:text="address"
                        android:textColor="@color/black"
                        android:textFontWeight="1000"
                        android:textSize="12dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="94dp"
                        android:gravity="center"
                        android:text="Prefer Gender:" />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/gender_tv"
                        android:text="address"
                        android:textColor="@color/black"
                        android:textFontWeight="1000"
                        android:textSize="18dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="110dp"
                        android:gravity="center"
                        android:text="Prefer Age From:" />
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/min_age_tv"
                        android:text="23"
                        android:textColor="@color/black"
                        android:textFontWeight="1000"
                        android:textSize="18dp"
                        />
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="40dp"
                        android:text="To:"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/max_age_tv"
                        android:text="23"
                        android:textColor="@color/black"
                        android:textFontWeight="1000"
                        android:textSize="18dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="125dp"
                        android:gravity="center"
                        android:text="Expect peer review:" />
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/score_tv"
                        android:text="3.4"
                        android:textColor="@color/black"
                        android:textFontWeight="1000"
                        android:textSize="18dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <Button
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:id="@+id/find_peers"
        android:textSize="20dp"
        android:text="Find Peers"/>
</RelativeLayout>